/**
 * 
 */
package com.capgemini.display.even.odd;

import java.lang.reflect.Array;

/**
 * 
 */
public interface EvenOdd {
	
	public static void displayEvenOdd() {
		Integer[] arr=(Integer[]) Array.newInstance(Integer.class, 20);
		for(int i=0;i<=arr.length;i++) {
			Array.set(arr, i, i);
		}
		
		
		System.out.print("Even Number is: ");
		for (int i = 1; i < arr.length; i++) {
			if(arr[i]%2==0) {
				System.out.print(Array.get(arr,i)+" ");
			}
		}
		
		
		System.out.println();
		
		
		System.out.print("Odd Number is: ");
		for (int i = 1; i < arr.length; i++) {
			if(arr[i]%2!=0) {
				System.out.print(Array.get(arr,i)+" ");
			}
			
		}
		
		
		
	}
	

}
