/**
 * 
 */
package module_3_array;

import java.lang.reflect.Array;
import java.util.Iterator;

/**
 * 
 */
public interface JavaApplication {
	public static void execution1() {
		
		//decleration
		int [] array;
		
		//instatiation
		array=new int[3];
		
		//initialization
		
		
		array[0]=1; array[1]=2; array[2]=3;
		
		//utilization- for loop
		for(int i =0;i<array.length;i++) {
			System.out.print(array[i]+" ");
		}
		System.out.println();
		
		//utilization- foreach loop
		for(int i:array) {
			System.out.print(i+" ");
		}
		System.out.println();
		
		
	}
	
	//modern way to deal with array
	public static void execution2() {
		//decleration & instatiation
		int[] array=(int[]) Array.newInstance(int.class, 3);
		
		//initialization
		Array.setInt(array, 0, 4);
		Array.setInt(array, 1, 5);
		Array.setInt(array, 2, 6);
		
		//utilization- for loop
		for(int i=0;i<array.length;i++) {
			System.out.print(Array.getInt(array, i)+" ");
		}
		System.out.println();
		
		
		
	}
	
	public static void execution3() {
		Integer []arr=(Integer[]) Array.newInstance(int.class, 5);
		for (int i = 0; i < arr.length; i++) {
			Array.set(arr, i, i+1);
			
		}
		for (int i = 0; i < arr.length; i++) {
			System.out.print(Array.get(arr, i)+" ");
		}
	}
	

}
